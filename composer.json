{
    "name": "gemui/php-debug-pilot",
    "description": "An extensible CLI platform to manage PHP runtime debug configurations.",
    "type": "library",
    "keywords": [
        "xdebug",
        "pcov",
        "debug",
        "php",
        "cli",
        "devtools",
        "laravel-zero"
    ],
    "license": "MIT",
    "homepage": "https://github.com/Gemui/php-debug-pilot",
    "authors": [
        {
            "name": "Gemui",
            "homepage": "https://github.com/Gemui"
        }
    ],
    "support": {
        "issues": "https://github.com/Gemui/php-debug-pilot/issues",
        "source": "https://github.com/Gemui/php-debug-pilot"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": ">=8.2",
        "laravel-zero/framework": "^11.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "bin": [
        "builds/debug-pilot"
    ]
}